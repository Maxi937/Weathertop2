<div class="ui right aligned inverted five cards">
    <div class=" card">
        <div class="ui inverted segment">
            <i class="right floated huge violet map marker alternate icon"></i>
            <h2>
                {{name}}
            </h2>
        </div>
    </div>

    {{! this #with uses the current index of the station loop we are in to look up the corresponding element of the weatherReport array, 
    ie. when index is 0, we get weatherReports[0] }}
{{#with (lookup weatherReports @index)}}
    <div class="card">
        <div class="ui inverted segment">
            <i class="right floated huge {{weatherIcon}}"></i>
            <h2>
                Weather
            </h2>
             <p>
                {{weather}}
            </p>
        </div>
    </div>
    <div class="card">
        <div class="ui inverted segment">
            <i class="right floated huge blue temperature low icon"></i>
            <h2>
                Temp
            </h2>
            <p>
                <i class="right floated big blue ${station.getTrendAnalysis('Temp')}"></i>
                {{temperature}} C <br>
                {{farenheit}} F <br>
            </p>
        </div>
    </div>
    <div class="card">
        <div class="ui inverted segment">
            <i class="right floated huge green wind icon"></i>
            <h2>
                Wind
            </h2>
            <p>
                <i class="right floated big green ${station.getTrendAnalysis('windSpeed')}"></i>
                {{beaufort}} bft <br>
                {{windDirection}} <br>
                Feels like <br>
                {{windChill}}
            </p>
            </p>
        </div>
    </div>
    <div class="card">
        <div class="ui inverted segment">
            <i class="right floated huge orange stroopwafel icon"></i>
            <h2>
                Pressure
            </h2>
            <p>
                <i class="right floated big orange ${station.getTrendAnalysis('windPressure')}"></i>
                {{pressure}} hpa <br>
            </p>
        </div>
    </div>
</div>
{{/with}}

